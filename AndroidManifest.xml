<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.illinois.engr.courses.cs241.honors.tetris"
    android:versionCode="1"
    android:versionName="1.0" >

    
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    
    <application
        android:name="edu.illinois.tetris.TetrisApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="edu.illinois.tetris.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.illinois.tetris.MultiplayerMenuActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name="edu.illinois.tetris.PlayActivity"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>
